{
    "name": "web-midicontroller",
    "version": "0.0.2",
    "scripts": {
        "dev": "vite",
        "build": "rm -rf dist/* && vue-tsc --noEmit && vite build",
        "preview": "vite preview --port 5050",
        "test:unit": "vitest --environment jsdom",
        "test:e2e": "cypress open",
        "test:e2e:ci": "cypress run",
        "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "cm": "git-cz",
        "release": "standard-version -a && git push --follow-tags origin master"
    },
    "dependencies": {
        "@vueuse/components": "^9.13.0",
        "@vueuse/core": "^9.13.0",
        "axios": "^1.3.5",
        "pinia": "^2.0.34",
        "pinia-plugin-persistedstate": "3.1.0",
        "swiper": "^9.2.0",
        "validator": "^13.9.0",
        "vue": "^3.2.47",
        "vue-dndrop": "^1.3.1",
        "vue-router": "^4.1.6",
        "webmidi": "^3.0.21"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.5.1",
        "@commitlint/config-conventional": "^17.4.4",
        "@pinia/testing": "^0.0.16",
        "@rushstack/eslint-patch": "^1.2.0",
        "@types/jsdom": "^21.1.1",
        "@types/node": "^18.15.11",
        "@types/validator": "^13.7.15",
        "@vitejs/plugin-vue": "^4.1.0",
        "@vue/eslint-config-prettier": "^7.1.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "@vue/test-utils": "^2.3.2",
        "@vue/tsconfig": "^0.1.3",
        "autoprefixer": "^10.4.14",
        "cypress": "^12.9.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.38.0",
        "eslint-plugin-cypress": "^2.13.2",
        "eslint-plugin-sonarjs": "^0.19.0",
        "eslint-plugin-vue": "^9.10.0",
        "husky": "^8.0.3",
        "jsdom": "^21.1.1",
        "postcss": "^8.4.21",
        "postcss-import": "^15.1.0",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "^2.8.7",
        "sass": "^1.61.0",
        "standard-version": "^9.5.0",
        "start-server-and-test": "^2.0.0",
        "tailwindcss": "^3.3.1",
        "typescript": "^5.0.4",
        "vite": "^4.2.1",
        "vitest": "^0.30.0",
        "vue-tsc": "^1.2.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "standard-version": {
        "scripts": {
            "postbump": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts && git add src/version.ts"
        }
    }
}
